@model VPCustInfo.Models.CustomersDetails

@{
    ViewData["Title"] = "Edit Customer's Details";
}


<form asp-action="Edit" method="POST" role="form">
    <legend>Edit Customer's  @ViewData["Name"]  Details</legend>

    <div class="form-group">
        <label>Entry Type</label>
        <input type="text" class="form-control" name="_type" value="@Model.Type.Decrypt()">
    </div>

    <div class="form-group">
        <label>User Name</label>
        <input type="text" class="form-control" name="_username" value="@Model.UserName.Decrypt()">
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="text" class="form-control" name="_password" value="@Model.Password.Decrypt()">
    </div>

    <input type="hidden" name="_id" value="@Model.id">
    <input type="hidden" name="_custId" value="@Model.CustomerId">

    <button type="submit" class="btn btn-primary">Submit</button>

    <a asp-action="Customer" asp-controller="CustomerDetails" asp-route-id="@Model.CustomerId">
        <button type="button" class="btn btn-primary">To Details</button>
    </a>
</form>
