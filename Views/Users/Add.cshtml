@{
    ViewData["Title"] = "Add User";
}

<form asp-action="Add" method="POST" role="form" name="user"
        onsubmit="return UserValidation()">
    <legend>Add New User</legend>

    <div class="form-group">
        <label>User Name</label>
        <input type="text" class="form-control" name="_name" />
        <div class="alert alert-danger" id="user_name" style="display: none;"></div>
    </div>
    <div class="form-group">
        <label>User Rank</label>
        <input type="text" class="form-control" name="_rank" placeholder="[1, 2, 3]"/>
        <div class="alert alert-danger" id="user_rank" style="display: none;"></div>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="_pass" />
        <div class="alert alert-danger" id="user_pass" style="display: none;"></div>
    </div>

    <button type="submit" class="btn btn-primary">Add User</button>

    <a asp-action="Index">
        <button type="button" class="btn btn-primary">
            All Users
        </button>
</form>