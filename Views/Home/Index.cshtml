@{
    ViewData["Title"] = "Visual Pivot Control Panel";
}

<h1>Visual Pivot Control Panel</h1>

@{
    if ((bool)TempData.ContainsKey("LogFail"))
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>Log In Failed for user @TempData["LogFail"]</strong>
        </div>

        TempData.Remove("LogFail");
    }
    else if ((bool)TempData.ContainsKey("ValidateException"))
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>@TempData["ValidateException"]</strong>
        </div>

        TempData.Remove("ValidateException");
    }
    else if ((bool)TempData.ContainsKey("SessionExpired"))
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>Seems like you are not logged in or your Session has expired</strong> Please Log In...
        </div>

        TempData.Remove("SessionExpired");
    }
    else if ((bool)TempData.ContainsKey("NoUserName"))
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>User Name is missing. Please state who are you</strong>
        </div>

        TempData.Remove("NoUserName");
    }
}

<form asp-action="Validate">
    <div class="form-group">
        <label for="name" class="control-label">User Name</label>
        <input type="text" name="_name" class="form-control" placeholder="User's Name" />
    </div>

    <div class="form-group">
        <label for="pass">Password</label>
        <input type="password" name="_pass" class="form-control" placeholder="Password" />
    </div>
    <button type="submit" class="btn btn-primary">Log In</button>
</form>